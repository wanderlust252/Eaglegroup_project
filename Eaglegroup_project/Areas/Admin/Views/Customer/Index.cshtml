@inject IAuthorizationService AuthorizationService;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section Scripts{

    <script src="~/app/controllers/customer/index.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script>
        var customerObj = new customerController();
        customerObj.initialize();
    </script>
}
@section Styles{
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet" />
}

<input type="hidden" id="hid-category-id" value="0" />
<div class="page-title">
    <div class="title_left">
        <h3>Customer</h3>
    </div>

    <div class="row">
        <div class="col-md-5 col-sm-5 form-group">
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-success" id="btn-advanced-filter" type="button">Advanced Filter</button>
                </span>
            </div>
        </div>
    </div>
    <div class="title_right">

        <div class="col-md-1 col-sm-1 form-group pull-right top_search">
            @if (User.IsInRole("SaleStaff"))
            {
                <button class="btn btn-success" id="btn-get-customer" type="button">Get Customer</button>
            }
            else
            {
                <button class="btn btn-success" id="btn-create" type="button">Create</button>
            }
            @*@if ((await AuthorizationService.AuthorizeAsync(User, "CUSTOMER", Operations.Create)).Succeeded)
                {

                }*@
        </div>

        <div class="col-md-5 col-sm-5 form-group pull-right top_search">
            <div class="input-group">
                <input type="text" id="txt-search-keyword" class="form-control" placeholder="Search...">

                <span class="input-group-btn">
                    <button class="btn btn-default" id="btn-search" type="button">Search!</button>
                </span>
            </div>
        </div>

    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table id="tbl-product" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                    <thead>
                        <tr>
                            @if (!User.IsInRole("SaleStaff"))
                            {
                                <th>FullName</th>
                            }
                            <th>CreatorNote</th>
                            <th>StaffNote</th>
                            <th>Price</th>
                            <th>Deal</th>
                            <th>DateSendByCustomer</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>

                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddl-show-page">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                record/page.
                            </span>
                            Total record count: <strong id="lbl-total-records"></strong>
                        </div>
                    </div><div class="col-sm-7">
                        <div class="dataTables_paginate" id="datatable-checkbox_paginate">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script id="table-template" type="x-tmpl-mustache">
    <tr>
        @if (!User.IsInRole("SaleStaff"))
        {
            <td>{{FullName}}</td>
        }
        <td>{{CreatorNote}}</td>
        <td>{{{StaffNote}}}</td>
        <td>{{{Price}}}</td>
        <td>{{{Deal}}}</td>
        <td>{{{DateSendByCustomer}}}</td>
        <td>{{{Status}}}</td>

        @if ((await AuthorizationService.AuthorizeAsync(User, "CUSTOMER", Operations.Update)).Succeeded)
        {
            <td>
                <a href="#" data-id="{{Id}}" class="btn-edit"><i class="fa fa-pencil-square-o"></i></a>

            </td>
        }
        @if ((await AuthorizationService.AuthorizeAsync(User, "CUSTOMER", Operations.Delete)).Succeeded)
        {
            <td>

                <a href="#" data-id="{{Id}}" class="btn-delete"><i class="fa fa-trash-o"></i></a>


            </td>

        }
    </tr>
</script>

@await Html.PartialAsync("_AddEditModal.cshtml")


