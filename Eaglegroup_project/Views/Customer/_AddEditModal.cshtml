<div id="modal-add-edit" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Add/edit user</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainance">
                        <input type="hidden" id="hidId" value="" />
                        <input type="hidden" name="txtStaffId" id="txtStaffId" />
                        <input type="hidden" name="txtCreatorId" id="txtCreatorId" />

                        @if (!User.IsInRole("SaleStaff"))
                        {
                            <div class="form-group row">
                                <label for="txtFullName" class="col-sm-4 control-label">Full name</label>
                                <div class="col-sm-8">
                                    <input type="text" name="txtFullName" class="form-control" id="txtFullName">
                                </div>
                            </div>
                        }

                        <div class="form-group row">
                            <label for="txtPhoneNumber" class="col-sm-4 control-label">Phone Number</label>
                            <div class="col-sm-8">
                                <input type="text" name="txtPhoneNumber" class="form-control" id="txtPhoneNumber">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtCreatorNote" class="col-sm-4 control-label">CreatorNote</label>
                            <div class="col-sm-8">
                                <input type="text" name="txtCreatorNote" class="form-control" id="txtCreatorNote" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtStaffNote" class="col-sm-4 control-label">StaffNote</label>
                            <div class="col-sm-8">
                                <input type="text" name="txtStaffNote" class="form-control" id="txtStaffNote" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txtPrice" class="col-sm-4 control-label">Price</label>
                            <div class="col-sm-8">
                                <input type="text" name="txtPrice" class="form-control" id="txtPrice">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txtDeal" class="col-sm-4 control-label ">Deal</label>
                            <div class="col-sm-8">
                                <input type="text" name="txtDeal" class="form-control" id="txtDeal">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txtDateSendByCustomer" class="col-sm-4 control-label">DateSendByCustomer</label>
                            <div class="col-sm-8">
                                <input type="text" name="txtDateSendByCustomer" class="form-control" id="txtDateSendByCustomer">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btnSave" class="btn btn-success">Save</button>
                                <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-default">Close</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>